<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="150dp"
    android:padding="10dp">

    <TextView
        android:id="@+id/textViewCShopNameRecyclerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:maxLines="1"
        android:text="가계이름"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCShopAddressRecyclerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCShopNameRecyclerName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="주소"
        android:textColor="@color/black"
        android:textSize="20dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textViewCShopNameRecyclerName" />

    <TextView
        android:id="@+id/textViewCShopCaregoryRecyclerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewCShopNameRecyclerName"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:ellipsize="end"
        android:maxLines="4"
        android:text="카테고리"
        android:textColor="@color/black"
        android:textSize="20dp"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/textViewCShopAddressRecyclerName" />
</androidx.constraintlayout.widget.ConstraintLayout>
