<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="30dp"
    card_view:cardCornerRadius="4dp"
    android:layout_marginBottom="10dp"
    android:focusable="true"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="399dp"
        android:layout_height="127dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/imageShop"
            android:layout_width="74dp"
            android:layout_height="105dp"
            android:layout_marginRight="10dp"
            android:background="@color/grayLight" />

        <TextView
            android:id="@+id/textViewShopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageShop"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/imageShop"
            android:maxLines="1"
            android:text="가계이름"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewShopAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewShopName"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/imageShop"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="주소"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </RelativeLayout>
</RelativeLayout>
